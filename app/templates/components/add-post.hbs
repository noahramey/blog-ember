<h1 class="text-center">New Case</h1>
 <div>
   <form class="text-center">
     <div class="form-group">
       <label for="author">Author</label>
       {{input value=author id="author"}}
     </div>

     <div class="form-group">
       <label for="title">Title</label>
       {{input value=title id="title"}}
     </div>

     <div class="form-group">
       <label for="category">Category</label>
       {{input value=category id="category"}}
     </div>

     <div class="form-group">
       <label for="content">Case Details</label>
       {{textarea value=content id="content"}}
     </div>

     <div class="form-group">
       <label for="image">Image URL</label>
       {{input value=image id="image"}}
     </div>

     <button class="btn btn-success" {{action 'save'}}>Leak</button>
   </form>
 </div>
